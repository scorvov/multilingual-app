{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "es6",
      "es2015",
      "dom",
      "es2015.iterable"
    ],
    "types": [
      "reflect-metadata"
    ],
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "preserveConstEnums": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "noEmit": true
  },
  "exclude": [
    "**/index.js",
    "node_modules",
    "metro.config.js",
    "ios",
    "android",
    "tools",
    "react-native-default-preference"
  ]
}
